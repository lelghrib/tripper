
<div class="tabs-container mt-3">
     <div class="tab-button">1</div>
     <hr>
     <div class="tab-button">2</div>
     <hr>
     <div class="tab-button tab-active">3</div>
     <hr>
     <div class="tab-button">Go</div>
   </div>
    <h1 class="mb-4 text-center">Choose activities</h1>

   <div class="form-container-criteria-slider ">
      <h1 class="mb-4 text-center form-header">Choose activities</h1>
      <div class="d-flex justify-content-center">
          <div class="col-md-6 mt-8">
              <%= simple_form_for([@trip, @step]) do |f| %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="category-choices">
                    <% @list_acti_culture.each do |acti_culture| %>
                      <input type="checkbox"class="hidden" value="<%= acti_culture.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_culture.id %>">
                      <label for="step_activity_activity_ids_<%= acti_culture.id %>" class="category-choice">
                        <%= acti_culture.name %>
                        <i class="fa fa-check"></i>
                      </label>
                    <% end %>
                   </div>
                </div>
                <%#= f.input :content, placeholder: "In this tutorial..." %>
                <%= f.submit "Save", value: "Go!", class: "green-btn"  %>
              <% end %>
         </div>
    </div>



</div>
