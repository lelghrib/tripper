              <p>acti chose beach <%= @list_acti_beach_choose.count %></p>





              <%= simple_form_for([@trip, @step]) do |f| %>
              <!-- Inject fixed activities -->
              <div class="form-group">
                <% unless @fixed_activities_ids == [] %>
                  <input type="hidden" name="activities_fixed_ids[]" value="<%= @fixed_activities_ids %>">
                 <% end %>
              </div>

              <!-- culture to choose -->
              <% unless @list_acti_culture_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="category-choices">
                    <% @list_acti_culture_choose.each do |acti_culture| %>
                      <input type="checkbox"class="hidden" value="<%= acti_culture.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_culture.id %>">
                      <label for="step_activity_activity_ids_<%= acti_culture.id %>" class="category-choice">
                        <%= acti_culture.name %>
                        <i class="fa fa-check"></i>
                      </label>
                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- Sport to choose -->
              <% unless @list_acti_sport_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="category-choices">
                    <% @list_acti_sport_choose.each do |acti_sport| %>
                      <input type="checkbox"class="hidden" value="<%= acti_sport.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_sport.id %>">
                      <label for="step_activity_activity_ids_<%= acti_sport.id %>" class="category-choice">
                        <%= acti_sport.name %>
                        <i class="fa fa-check"></i>
                      </label>
                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- visit to choose -->
              <% unless @list_acti_visit_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="category-choices">
                    <% @list_acti_visit_choose.each do |acti_visit| %>
                      <input type="checkbox"class="hidden" value="<%= acti_visit.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_visit.id %>">
                      <label for="step_activity_activity_ids_<%= acti_visit.id %>" class="category-choice">
                        <%= acti_visit.name %>
                        <i class="fa fa-check"></i>
                      </label>
                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- beach to choose -->
              <% unless @list_acti_beach_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="category-choices">
                    <% @list_acti_beach_choose.each do |acti_beach| %>
                      <input type="checkbox"class="hidden" value="<%= acti_beach.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_beach.id %>">
                      <label for="step_activity_activity_ids_<%= acti_beach.id %>" class="category-choice">
                        <%= acti_beach.name %>
                        <i class="fa fa-check"></i>
                      </label>
                    <% end %>
                   </div>
                </div>
              <% end %>

              <%#= f.input :content, placeholder: "In this tutorial..." %>
              <%= f.submit "Save", class: "green-btn"  %>
            <% end %>
          </div>
        </div>
      </div>
