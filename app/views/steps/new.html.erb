
  <div class="tabs-container mt-3">
    <div class="tab-button tab-active">1</div>
    <hr>
    <div class="tab-button tab-active">2</div>
    <hr>
    <div class="tab-button">3</div>
    <hr>
    <div class="tab-button">Go</div>
  </div>


   <div class="form-container-criteria-slider ">
     <% if @list_acti_culture_choose == [] && @list_acti_sport_choose == [] && @list_acti_visit_choose == [] && @list_acti_beach_choose == [] %>
       <h1 class="mb-4 text-center form-header">Your preferences</h1>
     <% else %>
       <h1 class="mb-4 text-center form-header">Choose two activities</h1>
     <% end %>

      <div class="d-flex justify-content-center">
          <div class="">
              <div class="form-post">
              <div class="row">


              <%= simple_form_for([@trip, @step]) do |f| %>
              <!-- Inject fixed activities -->
              <div class="form-group">
                <% unless @fixed_activities_ids == [] %>
                  <input type="hidden" name="activities_fixed_ids[]" value="<%= @fixed_activities_ids %>">
                 <% end %>
              </div>
              <!-- slider if no activities to choose -->
              <% if @list_acti_culture_choose == [] && @list_acti_sport_choose == [] && @list_acti_visit_choose == [] && @list_acti_beach_choose == [] %>
               <div class="d-flex">
                 <div class="trip-info">
                   <h3>From</h3>
                   <p><%= @trip.arrival_city.name %></p>
                   <p><%= @trip.start_date.strftime("%Y-%d-%m") %></p>
                   <h3>To</h3>
                   <p><%= @trip.departure_city.name %></p>
                   <p><%= @trip.end_date.strftime("%Y-%d-%m") %></p>
                 </div>
                 <div class="user-preferences">
                  <p>Culture: <%= @trip.criteria["culture"] %>%</p>
                  <p>Sport: <%= @trip.criteria['sport'] %>%</p>
                  <p>Visit: <%= @trip.criteria['visit'] %>%</p>
                  <p>Beach: <%= @trip.criteria['beach'] %>%</p>
                 </div>
               </div>
              <% end %>

              <!-- culture to choose -->
              <% unless @list_acti_culture_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="activity-choices">
                    <% @list_acti_culture_choose.each do |acti_culture| %>


                      <div class="card col-sm-5 mb-5" style="width: 18rem;">
                        <input type="checkbox"class="hidden check-culture" value="<%= acti_culture.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_culture.id %>">
                        <label for="step_activity_activity_ids_<%= acti_culture.id %>" class="activity-choice acti-cuture card-title margin-none pb-2">
                          <%= image_tag acti_culture.photo, class: "card-img-top" %>
                          <div class="mt-2"> <%= acti_culture.name %>  </div>
                        </label>
                      </div>


                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- Sport to choose -->
              <% unless @list_acti_sport_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="activity-choices">
                    <% @list_acti_culture_choose.each do |acti_sport| %>


                      <div class="card col-sm-5 mb-5" style="width: 18rem;">
                        <input type="checkbox"class="hidden check-sport" value="<%= acti_sport.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_sport.id %>">
                        <label for="step_activity_activity_ids_<%= acti_sport.id %>" class="activity-choice acti-sport card-title margin-none pb-2">
                          <%= image_tag acti_sport.photo, class: "card-img-top" %>
                          <div class="mt-2"> <%= acti_sport.name %>  </div>
                        </label>
                      </div>


                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- visit to choose -->
              <% unless @list_acti_visit_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="activity-choices">
                    <% @list_acti_visit_choose.each do |acti_visit| %>


                      <div class="card col-sm-5 mb-5" style="width: 18rem;">
                        <input type="checkbox"class="hidden check-visit" value="<%= acti_visit.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_visit.id %>">
                        <label for="step_activity_activity_ids_<%= acti_visit.id %>" class="activity-choice acti-visit card-title margin-none pb-2">
                          <%= image_tag acti_visit.photo, class: "card-img-top" %>
                          <div class="mt-2"> <%= acti_visit.name %>  </div>
                        </label>
                      </div>


                    <% end %>
                   </div>
                </div>
              <% end %>
              <!-- beach to choose -->
              <% unless @list_acti_beach_choose == [] %>
                <div class="form-group">
                  <input type="hidden" name="activities_ids[]" value="">
                  <div class="activity-choices">
                    <% @list_acti_beach_choose.each do |acti_beach| %>


                      <div class="card col-sm-5 mb-5" style="width: 18rem;">
                        <input type="checkbox"class="hidden check-beach" value="<%= acti_beach.id %>" name="activities_ids[]" id="step_activity_activity_ids_<%= acti_beach.id %>">
                        <label for="step_activity_activity_ids_<%= acti_beach.id %>" class="activity-choice acti-beach card-title margin-none pb-2">
                          <%= image_tag acti_beach.photo, class: "card-img-top" %>
                          <div class="mt-2"> <%= acti_beach.name %>  </div>
                        </label>
                      </div>


                    <% end %>
                   </div>
                </div>
              <% end %>

              <%#= f.input :content, placeholder: "In this tutorial..." %>
              <%= f.submit "Go", class: "green-btn"  %>
            <% end %>
            </div>

            </div>
         </div>
    </div>
</div>


