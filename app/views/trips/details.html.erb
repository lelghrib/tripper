<div class="container ">
<div class="preferences d-flex">
<div class="filter">beach :<%= @trip.criteria["beach"] %>%</div>
<div class="filter">sport :<%= @trip.criteria["sport"] %>%</div>
<div class="filter">culture : <%= @trip.criteria["culture"] %>%</div>
<div class="filter">visit: <%= @trip.criteria["visit"] %>%</div>
</div>

<div class="container d-flex">
  <div>
   <div class="d-flex justify-content-end">
    <%= link_to "Save", save_trip_path(@trip), method: :patch, class:'green-btn my-1', data:{confirm:"Trip saved"} %>
  </div>
<div class="map sticky-top">

  <div
        id="map"
        style="width: auto;
        height: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      >
      </div>
      </div>
</div>

<div class="list-activity">
  <h3>Your activities</h3>

<div class="steps">
  <%= @trip.steps.each do |step|%>
  <div class="step-details d-flex">
    <p><%= step.city.name %></p>

  <%# step.activities.each do |activity|  %>
  <%#= activity.name %>
  <%# end %>
<% end %>
  </div>
</div>
</div>
