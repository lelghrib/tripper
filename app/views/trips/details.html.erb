<div class="mb-4">
  <h2 class="trip-header text-center ">Discover your Trip</h2>
    <div class="preferences d-flex justify-content-around mt-2">
    <p class="filter"><i class="fas fa-umbrella-beach"></i>Beach <%= @trip.criteria["beach"] %>%</p>
    <p class="filter"><i class="fas fa-volleyball-ball"></i>Sport <%= @trip.criteria["sport"] %>%</p>
    <p class="filter"><i class="fas fa-chess-queen"></i>Culture <%= @trip.criteria["culture"] %>%</p>
    <p class="filter"><i class="fas fa-walking"></i> Visit <%= @trip.criteria["visit"] %>%</p>
  </div>
  <!-- <h3 class="form-header text-center">Timeline</h3> -->


  <div class="mb-6 timeline-cities d-flex justify-content-between align-items-center">
    <% @trip.steps.each do |step| %>
    <h2><%= step.city.name %></h2>
    <% end %>
  </div>
  <div class="timeline-container d-flex justify-content-around align-items-center mb-5">
    <% counter = 0 %>
    <% @trip.steps.each do |step| %>
    <p class="timeline"><%= counter += 1 %></p>
    <% if step.city != @trip.steps.last.city %>
      <!-- <div class="d-flex justify-content-center align-items-center">
        <h2 class="car-icon"><i class="fas fa-car"></i></h2>
      </div> -->
    <hr>
    <% end %>
    <% end %>
  </div>



  <div class="d-flex justify-content-around ml-6 mr-6 sticky-map-trip">

    <div class="map sticky-top ">

      <div class="d-flex justify-content-end btn-save">
        <%= link_to "Save", save_trip_path(@trip), method: :patch, class:'green-btn' %>
      </div>

      <div
        id="map"
        style="width: 100%;
        height: 100%;
        zoom: 1.5;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
    <div class="list-activity">
      <h3 class="trip-header text-center mb-4">Trip's details</h3>
       <% counter = 0 %>
      <% @trip.steps.each do |step| %>
      <div class="d-flex justify-content-center align-items-center">
        <div style="display: flex; align-items: center; justify-content: center;">
          <p class="timeline-details"><%= counter += 1 %></p>
 </div>
 <p class="city-name text-center"><%= step.city.name %> - <%= pluralize(step.duration, 'day') %></p>
      </div>
 <%= link_to details_trip_path (@trip), class:'details-links' do%>
      <% step.activities.each do |activity| %>
       <div class="card-product">
        <%=image_tag(activity.photo) %>
        <div class="card-product-infos">
          <h2><%= activity.name %></h2>
          <p><i class="far fa-clock"></i>About : <%= activity.duration/60 %>h</p>
          <p class="green">View details ...</p>
        </div>
      </div>
            <% end %>

      <% end %>
      <% end %>

    </div>

  </div>
</div>
