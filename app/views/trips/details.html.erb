<div class="mt-10 mb-4 bg">
  <h3 class="trip-header text-center mb-4 ">Discover your Trip</h3>
  <div class="preferences d-flex justify-content-center mb-6">
    <p class="filter">Beach : <%= @trip.criteria["beach"] %>%</p>
    <p class="filter">Sport : <%= @trip.criteria["sport"] %>%</p>
    <p class="filter">Culture : <%= @trip.criteria["culture"] %>%</p>
    <p class="filter">Visit : <%= @trip.criteria["visit"] %>%</p>
  </div>
  <!-- <h3 class="form-header text-center">Timeline</h3> -->
  <div class=" timeline-container d-flex justify-content-around align-items-center mb-8">
    <% @trip.steps.each do |step| %>
      <p class="timeline"><%= step.city.name %></p>
      <% if step.city != @trip.steps.last.city %>
          <hr>
      <% end %>
    <% end %>


  </div>
