  <div class="d-flex justify-content-around ml-6 mr-6 sticky-map-trip">

    <div class="map sticky-top">
    <div class="d-flex justify-content-end btn-save">
      <%= link_to "Save", save_trip_path(@trip), method: :patch, class:'green-btn', data:{confirm:"Trip saved"} %>
    </div>
    <div
      id="map"
      style="width: auto;
      height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    </div>
    <div class="list-activity">
      <h2 class="trip-header text-center">Trip details</h3>

        <% @trip.steps.each do |step| %>
          <p><%= step.city.name %></p>
          <% step.activities.each do |activity| %>
              <div class="card-product">
              <%=image_tag(activity.photo) %>
              <div class="card-product-infos">
                <h2><%= activity.name %> (<%= activity.duration/60 %> h)</h2>
                <p>View details ...</p>
              </div>
            </div>
          <% end %>
        <% end %>

    </div>
  </div>

