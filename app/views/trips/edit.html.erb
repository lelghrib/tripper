<div class="form-container form-border">
  <h1 class="mb-4 text-center">Edit your trip</h1>
  <div class="d-flex justify-content-center">
    <div class="col-md-6 mt-8">
      <%= simple_form_for(@trip) do |f| %>
      <%= f.label :arrival_city, collection: ["Florence", "Rome", "Naples", "Bologne", "Bari", "Positano", "Anzio", "Piombino"] %>
      <%= f.text_field :departure_city, collection: ["Florence", "Rome", "Naples", "Bologne", "Bari", "Positano", "Anzio", "Piombino"] %>
      <%= f.label :start_date, as: :date %>
      <%= f.text_field :end_date, as: :date %>
      <div class="d-flex justify-content-center mb-4">
        <%= f.button :submit, value: "Update your trip", class: "green-btn"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
